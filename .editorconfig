# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python
[*.py]
indent_size = 4

# JavaScript/TypeScript/JSON
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab

# Go
[*.go]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Terraform
[*.tf]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 4
